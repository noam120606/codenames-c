{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Server",
      "type": "shell",
      "command": "./run.sh",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "presentation": {
        "panel": "shared",
        "group": "dev",
        "clear": false
      }
    },
    {
      "label": "Run Client",
      "type": "shell",
      "command": "./run.sh",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "presentation": {
        "panel": "shared",
        "group": "dev",
        "clear": false
      }
    },
    {
      "label": "Run All",
      "dependsOn": ["Run Server", "Run Client"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
